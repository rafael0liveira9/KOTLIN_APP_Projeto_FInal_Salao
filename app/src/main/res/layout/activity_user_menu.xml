<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.userMenu"
    android:orientation="horizontal"
    android:gravity="right"
    >

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:background="@color/pinkSecondary"
        android:orientation="vertical"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:gravity="left"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            >
            <Button
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:drawableLeft="@drawable/baseline_close_24"
                android:background="@android:color/transparent"
                android:gravity="center_vertical|center_horizontal"
                android:drawablePadding="8dp"
                android:padding="0dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:padding="20dp"
            android:orientation="vertical"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey_222"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center_vertical|center_horizontal"
                android:drawablePadding="8dp"
                android:padding="0dp"
                android:text="Opção 1"
                android:textColor="#999999"
                android:textStyle="bold"
                android:textSize="20sp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center_vertical|center_horizontal"
                android:drawablePadding="8dp"
                android:padding="0dp"
                android:text="Opção 2"
                android:textColor="#999999"
                android:textStyle="bold"
                android:textSize="20sp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center_vertical|center_horizontal"
                android:drawablePadding="8dp"
                android:padding="0dp"
                android:text="Opção 3"
                android:textColor="#999999"
                android:textStyle="bold"
                android:textSize="20sp"
                />
            <Button
                android:id="@+id/logOutBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center_vertical|center_horizontal"
                android:drawablePadding="8dp"
                android:padding="0dp"
                android:text="Sair"
                android:textColor="@color/grey_222"
                android:textStyle="bold"
                android:textSize="20sp"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>